<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnPesquisar"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="5"
            android:backgroundTint="#00642F2F"
            android:src="@drawable/ic_pesquisa_55dp"
            android:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnCadastrarAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:backgroundTint="#00642F2F"
            android:src="@drawable/ic_add_55dp"
            android:tint="#1DD125"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#00642F2F"
            android:src="@drawable/ic_perfil_55dp"
            android:tint="#FFFFFF"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <EditText
            android:id="@+id/edtPesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="PESQUISAR"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnPesquisarIr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00C46868"
            android:src="@drawable/ic_voltar_55dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewAnimais"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPesquisa" />
</androidx.constraintlayout.widget.ConstraintLayout>